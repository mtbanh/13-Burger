<div class="container">
  <div class="jumbotron text-center bg-primary text-white">
    <h1 class="display-4" id="app-title">Awesome Foods</h1>
    <p class="lead">Welcome to the collection of all your Vietnamese Food cravings.</p>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card border border primary">
        <div class="card-header bg-primary text-white">What would you like to eat today?</div>

        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="food">Place order here:</label>
              <input type="text" class="form control" id="foodToGo" placeholder="pho">
            </div>
            <button class="btn btn-primary" type="submit">Make my order!</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6 mt-4">
      <div class="card border border primary">
        <div class="card-header bg-primary text-white">Foods eaten</div>
      </div>

      <div class="card-body">
        {{#each foods}}
          {{#unless eaten}}
            {{> foods/food-block eaten=true}}
          {{/unless}}
        {{/each}}
      </div>
    </div>

    <div class="col-md-6 mt-4">
      <div class="card eaten-card">
        <div class="card-header bg-primary text-white id=""">Foods that have not been eaten yet</div>
      </div>

      <div class="card-body">
        {{#each foods}}
          {{#if eaten}}
            {{> foods/food-block eaten=false}}
          {{/if}}
        {{/each}}

      </div>
    </div>
  </div>

  <h2>Add a Food</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="food">Food Name:</label>
      <input type="text" id="add-food" class: 'form-control' name="name">
    </div>

